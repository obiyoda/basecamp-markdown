{
  "manifest_version": 3,
  "name": "Basecamp Markdown Renderer",
  "version": "1.2.0",
  "description": "Renders markdown content inside Basecamp code blocks as formatted HTML",
  "permissions": [],
  "host_permissions": [
    "https://*.basecamp.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.basecamp.com/*"],
      "js": ["lib/marked.min.js", "lib/highlight.min.js", "content.js"],
      "css": ["styles.css", "lib/highlight-theme.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
